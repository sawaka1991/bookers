<body>
	<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

	<h1>Books</h1>
	<div class="table">
		<table>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
			<% @books.each do |book| %>
			<tr>
				<th><%= link_to book.title, book_path(book) %></th>
				<th><%= link_to book.body, book_path(book) %></th>
				<th><%= link_to "show",  book_path(book.id) %></th>
				<th><%= link_to "edit", edit_book_path(book.id) %></th>
				<th><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "are you sure?" %></th>
			</tr>
		<% end %>
		</table>
	</div>
	<br>


	<h2>New book</h2>
	<!-- form_for部分 -->
	<%= form_for(@book) do |f| %>
	<div class="form">
		<h4>★title★</h4>
		<%= f.text_field :title %>
		<h4>✩body✩</h4>
		<%= f.text_area :body %><br>

		<%= f.submit 'create book' %>
	<% end %>
	</div>
</body>
